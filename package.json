{
  "name": "generator-alexa-ts",
  "version": "0.0.1",
  "description":
    "A Yeoman generator for Alexa Skills to run on AWS Lambda using TypeScript",
  "homepage": "",
  "author": {
    "name": "Behboud",
    "email": "b.kalantary@gmail.com",
    "url": ""
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "keywords": [
    "alexa",
    "yeoman-generator",
    "typescript",
    "lambda",
    "serverless"
  ],
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chalk": "^2.2.0",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/fs-extra": "^4.0.3",
    "@types/jest": "^21.1.5",
    "@types/lodash": "^4.14.80",
    "@types/prettier": "^1.7.1",
    "@types/shelljs": "^0.7.5",
    "@types/typescript": "^2.0.0",
    "@types/yeoman-generator": "^2.0.0",
    "@types/yeoman-test": "^1.7.2",
    "@types/yosay": "^0.0.29",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-typescript": "^0.8.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "ts-jest": "^21.1.4",
    "typescript": "^2.6.1",
    "typescript-eslint-parser": "^8.0.1",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "axios": "^0.17.0",
    "chalk": "^2.1.0",
    "fs-extra": "^4.0.2",
    "lodash": "^4.17.4",
    "shelljs": "^0.7.8",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["templates"]
  },
  "scripts": {
    "pretest": "eslint . && node_modules/.bin/tsc",
    "precommit": "lint-staged",
    "test": "jest",
    "prepublish":
      "nsp check && node_modules/.bin/tsc && rsync -r ./src/app/templates ./generators/app"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": false,
          "printWidth": 90
        }
      ]
    },
    "parser": "typescript-eslint-parser",
    "plugins": ["typescript", "prettier"]
  },
  "repository": "behboud/generator-alexa-ts",
  "license": "Apache-2.0"
}
