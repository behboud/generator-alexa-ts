{
  "compilerOptions": {
    "outDir": ".webpack/service/src",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "ES5",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "mapRoot": ".webpack/service/src",
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
